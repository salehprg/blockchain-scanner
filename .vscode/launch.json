{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: TS (ts-node + paths)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "-r",
        "ts-node/register/transpile-only",
        "-r",
        "tsconfig-paths/register",
        "-r",
        "dotenv/config",
        "-r",
        "reflect-metadata"
      ],
      "program": "${workspaceFolder}/src/main/server.ts",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
      },
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**/*.js"
      ],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },

    {
      "name": "Debug: Built JS (dist)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/main/server.js",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**/*.js"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true
    }
  ]
}
